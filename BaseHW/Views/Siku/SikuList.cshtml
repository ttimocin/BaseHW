@model BaseHW.Models.DTO.SikuListVm
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

} 
<!DOCTYPE html>
<html lang="en">
<head>

    <style>



    </style>
</head>

<body>
    <div class="container-fluid">


        <div class="card-header bg-primary mb-1">
            <h4 class="card-title text-white">
                Siku Listesi
            </h4>
        </div>
       
        <div class="card-body">


    <table>
        <tr>
            <th>Model Adı</th>
            <th>Üretim Yılı</th>
            <th>Renk</th>
            <th>Fotoğraf</th>
            <th>Seri</th>
            <th>Ölçek</th>
            <th>Action</th>

        </tr>
        @foreach (var item in Model.SikuList)
        {


        <tr>

            <td>@item.Title</td>
                <td>@item.SikuyearNames</td>
            <td>@item.Renk</td>
                <td><img style="height:60px;width:80px" src="/Uploads/@item.Image" /></td>
                <td>@item.Seri</td>
            <td>@item.Director</td>

            <td>
                    <a href="/Siku/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Emin misin?')" href="/Siku/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>

            
            </td>
        </tr>


        }
    </table>

        </div>

        <div class="input-container">
            <a class="btn btn-primary" href="/Siku/Add">Geri</a>
        </div>

</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
        });

    </script>

    }

</body>
</html>