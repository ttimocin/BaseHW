@model BaseHW.Models.Domain.Hw
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}

<main id="main" class="main">

    <div class="container-fluid">
        <div class="card">


<form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="card-header bg-primary mb-1">
                    <h4 class="card-title text-white">
                        Siku Güncelle
                    </h4>
                </div>
                <div class="card-body">


    <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="Image">


    <div class="input-container">
        <label asp-for="Title" class="w-40">Title</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"></span>
    </div>

    <div class="input-container">
        <label asp-for="ImageFile" class="w-40">ImageFile</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"></span>
    </div>



    <div class="input-container">
        <label asp-for="Hwyears" class="w-40">Hwyear</label>
        <select asp-items="Model.MultiHwyearList" class="input" asp-for="Hwyears" multiple>
            <option value="">--select--</option>

        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Hwyears"></span>
    </div>

    <div class="input-container">
        <label asp-for="Renk" class="w-40">Released Year</label>
        <input type="text" class="input" asp-for="Renk">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Renk"></span>
    </div>

    <div class="input-container">
        <label asp-for="Seri" class="w-40">Seri</label>
        <input type="text" class="input" asp-for="Seri">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Seri"></span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Director</label>
        <input type="text" class="input" asp-for="Director">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Director"></span>
    </div>





    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                        <a class="btn btn-primary" href="/Hw/HwList ">Tüm Kayıtlar</a>
    </div>

                </div>

</form>

        </main>