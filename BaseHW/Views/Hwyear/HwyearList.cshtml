@model IEnumerable<BaseHW.Models.Domain.Hwyear>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}

<main id="main" class="main">


    <div class="container-fluid">

            <div class="card-header bg-primary mb-1">
                <h4 class="card-title text-white">Hwyears</h4>
            </div>

        <tr>
            <th>Üretim Yılı</th>
            <th>Aksiyon</th>
        </tr>
        <div class="card-body" style="background-color:lightgray">

        @foreach(var item in Model){

            <div class="rounded mb-4 bg-white p-2">
                <div class="row">
                        <div class="d-flex justify-content-end align-items-center">

        <tr>
                <td>@item.HwyearName</td>
                     <td>
                                    <div class="d-flex justify-content-end align-items-center">

                    <a href="/Hwyear/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>

                    <a onclick="return window.confirm('Are you sure?')" href="/Hwyear/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                    </div>

                    </td>
        </tr>

                        </div>

                    </div>
            </div>

        }

        </div>
    <div class="input-container">
        <a href="/Hwyear/Add" class="btn btn-sec">Geri</a>
    </div>
        </div>
    </div>

</main>
