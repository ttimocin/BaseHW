@model BaseHW.Models.Domain.Hwyear
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}

<main id="main" class="main">

    <div class="container-fluid">
        <div class="card">

<form class="w-40" asp-action="Add" method="post">

                <div class="card-header bg-primary mb-1">
           <h4 class="card-title text-white">
            HW Üretim Yılı Ekle
        </h4>
        </div>
   
   <div class="card-body">

    <div class="input-container">
        <label asp-for="HwyearName" class="w-40">Hw Üretim Yılı</label>
        <input type="text" class="input" asp-for="HwyearName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="HwyearName"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-3" >
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-primary" href="/Hwyear/HwyearList ">Tüm Kayıtlar</a>
    </div>

    </div>


</form>

        </div>

</div>



</main>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
        });

    </script>

    }