@model BaseHW.Models.Domain.Siku


@{
    ViewData["Title"] = "Siku";

}
<html>

<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8201505636469020"
            crossorigin="anonymous"></script>
    <style>
        .top {
            margin-left: 150px;
            margin-right: 150px;
            margin-top: 20px;
            margin-bottom: 20px;

        }

        .top a{
            margin-left:25px;
        }

        .top img{
                max-width: 300px; 
                max-height:auto; 
                padding:20px;

        }

        .top h3{
            font-size:18px;
        }

            .top h4 {
                font-size: 17px;
            }

        @@media (max-width: 920px) {
            .top {
                margin-left: 90px;
                margin-right: 90px;
                margin-top: 30px;
                margin-bottom: 15px;
            }

                .top img {
                    max-width: 300px;
                    max-height: auto;
                    padding: 20px;
                }
        }

        @@media (max-width: 600px) {
            .top {
                margin-left: 50px;
                margin-right: 50px;
                margin-top: 15px;
                margin-bottom: 9px;
            }

                .top img {
                    max-width: 250px;
                    max-height: auto;
                    padding: 20px;
                }
        }
            @@media (max-width: 480px) {
                .top {
                    margin-left: 10px;
                    margin-right: 10px;
                    margin-top: 10px;
                    margin-bottom: 5px;
                }

                .top img {
                    max-width: 200px;
                    max-height: auto;
                    padding: 20px;
                }
            }

    </style>
</head>

<body>
<header class="w3-container w3-center w3-padding-32">

</header>


<div class="top">


<div class="w3-card-4 w3-margin w3-white">

    <div class="w3-container">

    <img alt="image" src="/Uploads/@Model.Image">
    
    </div>

    <div class="w3-container">
                <h3>@_localization.Getkey("modeladi").Value: @Model.Title</h3>
                <h4>@Model.SikuyearNames</h4>
                <h4>@_localization.Getkey("renk").Value: @Model.Renk</h4>
                <h4>@_localization.Getkey("seri").Value : @Model.Seri</h4>
                <h4>@_localization.Getkey("olcek").Value : @Model.Director</h4>

    </div>
</div>

        <a href="/Home/Siku" class="btn btn-default">@_localization.Getkey("geri").Value</a>


</div>

</body>

</html>