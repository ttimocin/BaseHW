@model BaseHW.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="User">Geri Dön</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Parola sıfırlama</h4>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id"/>
             <form asp-action="ResetPassword" asp-controller="User" asp-area="Admin">
                <div class="mb-2">
                    <label>Kullanıcı adı</label>
                    <input type="text" asp-for="UserName" class="form-control" disabled/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Yeni şifre</label>
                    <input type="password" asp-for="NewPassword" class="form-control"/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Yeni şifreyi tekrar yaz</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100">
                        Şifreyi yenile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

